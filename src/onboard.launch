<launch>

    <!-- machine tags -->
    <machine name="c1" address="localhost" env-loader="/opt/ros/hydro/env.sh" default="true" />
    <machine name="c2" address="finder-thinkpad" env-loader="/home/finder-think/workspace/catkin/devel/env.sh" user="finder-think" password="finder-think" />

    <!-- rosserial node, external -->
    <node machine="c2" respawn="true" pkg="rosserial_python" type="serial_node.py" name="serialnode1" args="/dev/ttyACM0" />
    <node machine="c2" respawn="true" pkg="rosserial_python" type="serial_node.py" name="serialnode2" args="/dev/ttyACM1" />
    <node machine="c2" respawn="true" pkg="rosserial_python" type="serial_node.py" name="serialnode3" args="/dev/ttyACM2" />
    
    <!-- launching interfaces in finder -->
    <node machine="c2" respawn="true" pkg="finder" type="interface_arm.py" name="interface_arm" />
    <node machine="c2" respawn="true" pkg="finder" type="interface_diff.py" name="interface_diff" />
    <node machine="c2" respawn="true" pkg="finder" type="interface_litarms.py" name="interface_litarms" />
    
    <!-- launching interfaces in remote system, correcting for virtual joy hook -->
    <node machine="c1" respawn="true" pkg="finder" type="finderv2_testing_interface.py" name="finderv2_gui" />
    <node machine="c1" respawn="true" pkg="joy" type="joy_node" name="joy_node">
     <param name="dev" value="/dev/input/js1" />
    </node>
    
    <!-- power monitor, for laptop battery as of now -->
    <node machine="c2" respawn="true" pkg="finder" type="battery_monitor.py" name="battery_monitor" />
    

</launch>
